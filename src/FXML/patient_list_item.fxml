                  <ImageView fitHeight="20.0" fitWidth="20.0" opacity="0.69" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Assets/pencil.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Circle fx:id="scheduledIndicator" fill="#6039d2" layoutY="24.0" radius="4.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" visible="false" />
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </AnchorPane>
   </children>
