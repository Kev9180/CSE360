                  <Font size="1.0" />
               </font>
               <graphic>
                  <ImageView fx:id="messageButton" fitHeight="20.0" fitWidth="20.0" opacity="0.69" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Assets/comment-alt.png" />
